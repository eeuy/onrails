<!DOCTYPE html>
<html>
	<head>
	  <title>Onrails</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class="container">
			<% flash.each do |name, msg| %> <!-- creates a flash message-->
				<%= content_tag(:div, msg, class: "alert alert-#{name}") %>
				<% end %> <!--creates a flash message -->
			<%= yield %>
			<%= render 'layouts/footer' %>
		</div>
	</body>
</html>
