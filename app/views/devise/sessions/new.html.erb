<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %> <!-- added the simple_form_for and for-horizontal class-->
  
  <%= f.input :email %> <!--for the email box-->
  <%= f.input :password %> <!--for the pass box-->
	<%= f.input :remember_me, as: :boolean %> <!--remember box, the boolean is for check-->
  
  <div class="form-actions"> <!-- places the sign in button in a gray box-->
  	<%= f.submit "Sign in", class: "btn btn-primary" %> <!--makes the button primary-->
  </div>
<% end %>

<%= render "devise/shared/links" %>
